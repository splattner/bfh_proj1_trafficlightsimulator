<?xml version="1.0" encoding="UTF-8"?>

<tns:TrafficLightConfig
	xmlns:tns="http://www.bfh.ch/project1/2014/I2R/TrafficLightConfigSchema"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.bfh.ch/project1/2014/I2R/TrafficLightConfigSchema bin/ch/bfh/proj1/trafficlightsimulator/TrafficLightConfigSchema.xsd ">

	<tns:Junctions>
		<tns:junction>
			<tns:id>1</tns:id>
			<tns:leftStreet>1</tns:leftStreet>
			<tns:topStreet>2</tns:topStreet>
			<tns:rightStreet>3</tns:rightStreet>
			<tns:bottomStreet>4</tns:bottomStreet>
		</tns:junction>
	</tns:Junctions>

	<tns:Streets>
		<tns:street>
			<tns:id>1</tns:id>
			<tns:orientation>horizontal</tns:orientation>
			<tns:endJunction>1</tns:endJunction>
		</tns:street>
		<tns:street>
			<tns:id>2</tns:id>
			<tns:orientation>vertical</tns:orientation>
			<tns:startJunction>1</tns:startJunction>
		</tns:street>
		<tns:street>
			<tns:id>3</tns:id>
			<tns:orientation>horizontal</tns:orientation>
			<tns:startJunction>1</tns:startJunction>
		</tns:street>
		<tns:street>
			<tns:id>4</tns:id>
			<tns:orientation>vertical</tns:orientation>
			<tns:endJunction>1</tns:endJunction>
		</tns:street>
	</tns:Streets>

	<tns:Lanes>
		<tns:lane>
			<tns:id>1</tns:id>
			<tns:street>1</tns:street>
			<tns:direction>endToStart</tns:direction>
		</tns:lane>
		<tns:lane>
			<tns:id>2</tns:id>
			<tns:street>1</tns:street>
			<tns:direction>startToEnd</tns:direction>
		</tns:lane>
		<tns:lane>
			<tns:id>3</tns:id>
			<tns:street>2</tns:street>
			<tns:direction>endToStart</tns:direction>
		</tns:lane>
		<tns:lane>
			<tns:id>4</tns:id>
			<tns:street>2</tns:street>
			<tns:direction>startToEnd</tns:direction>
		</tns:lane>
		<tns:lane>
			<tns:id>5</tns:id>
			<tns:street>3</tns:street>
			<tns:direction>endToStart</tns:direction>
		</tns:lane>
		<tns:lane>
			<tns:id>6</tns:id>
			<tns:street>3</tns:street>
			<tns:direction>startToEnd</tns:direction>
		</tns:lane>
		<tns:lane>
			<tns:id>7</tns:id>
			<tns:street>4</tns:street>
			<tns:direction>endToStart</tns:direction>
		</tns:lane>
		<tns:lane>
			<tns:id>8</tns:id>
			<tns:street>4</tns:street>
			<tns:direction>startToEnd</tns:direction>
		</tns:lane>
	</tns:Lanes>

	<tns:Routes>
		<tns:route>
			<tns:id>1</tns:id>
			<tns:lane>2</tns:lane>
			<tns:lane>4</tns:lane>
		</tns:route>
	</tns:Routes>

</tns:TrafficLightConfig>
